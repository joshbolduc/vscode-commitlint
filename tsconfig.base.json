{
  "$schema": "https://json.schemastore.org/tsconfig",
  "//": "config extended by all tsconfigs in this repo",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2023",
    "outDir": "out",
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "composite": true
  }
}
