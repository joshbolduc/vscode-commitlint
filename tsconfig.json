{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "out",
    "lib": ["ES2019"],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error"
  },
  "exclude": ["node_modules"]
}
